<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:background="@drawable/custom_dialog"
    android:padding="30px"
    android:layout_gravity="center">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/notebook"
        android:scaleType="centerCrop"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        />
    <View
        android:layout_width="110dp"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="30dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="25dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/administration"
            android:scaleType="centerCrop"
            android:layout_gravity="center"

            android:layout_marginRight="10dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#DA7D97"
            app:hintAnimationEnabled="true"
            app:hintTextColor="#F65858"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_User_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#D63C68"
                android:fontFamily="@font/amiko"
                android:hint="Nhập tên của bạn"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textSize="19dp" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="25dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/administration"
            android:scaleType="centerCrop"
            android:layout_gravity="center"

            android:layout_marginRight="10dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#DA7D97"
            app:hintAnimationEnabled="true"
            app:hintTextColor="#F65858"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_avatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#D63C68"
                android:fontFamily="@font/amiko"
                android:hint="Chọn avatar"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textSize="19dp" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/custom_btn_6"
        android:fontFamily="@font/indie_flower"
        android:text="Save"
        android:textColor="@color/white"
        android:textSize="20dp" />


</LinearLayout>