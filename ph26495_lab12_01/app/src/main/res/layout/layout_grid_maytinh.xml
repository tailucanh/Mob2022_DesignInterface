<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/paddingActivity"
    android:background="@color/black"
    android:columnCount="4"
    android:rowCount="6"
    android:orientation="horizontal"
    >
    <TextView
        android:layout_width="match_parent"
        android:background="@drawable/custom_calculator2"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:paddingLeft="10dp"
        android:textSize="22dp"
        android:fontFamily="@font/abeezee"
        android:textColor="@color/white"/>

    <TextView android:layout_width="235dp"
        android:layout_height="50dp"
        android:background="@color/colorCalculatorBox"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:layout_gravity="left|top"
        android:textSize="22dp"
        android:textColor="@color/white"
        android:fontFamily="@font/abeezee"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_columnSpan="2"

        android:layout_gravity="clip_horizontal|top|right"
        android:layout_marginTop="8dp"
        android:textSize="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:fontFamily="@font/abeezee"

        android:background="@color/colorCalculatorBox"
        android:text="DELETE"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_row="2"
        android:layout_column="0"

        android:layout_gravity="fill_horizontal|top"
        android:layout_marginTop="8dp"
        android:layout_marginRight="3dp"

        android:textSize="45dp"
        android:fontFamily="@font/abeezee"
        android:background="@color/colorCalculatorBox2"
        android:text="7"
        android:textColor="@color/white"/>
    <Button
       android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_marginRight="3dp"

        android:layout_gravity="fill_horizontal|top"
        android:layout_marginTop="8dp"
        android:textSize="45dp"
        android:fontFamily="@font/abeezee"
        android:background="@color/colorCalculatorBox2"
        android:text="8"
        android:textColor="@color/white"/>
    <Button
       android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_row="2"
        android:layout_column="2"
        android:layout_marginRight="3dp"
        android:layout_gravity="fill_horizontal|top"
        android:layout_marginTop="8dp"

        android:textSize="45dp"
        android:fontFamily="@font/abeezee"
        android:background="@color/colorCalculatorBox2"
        android:text="9"
        android:textColor="@color/white"/>
    <Button
       android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_row="2"
        android:layout_column="3"

        android:layout_gravity="fill_horizontal|top"
        android:layout_marginTop="8dp"

        android:textSize="40dp"
        android:fontFamily="@font/abeezee"
        android:background="@color/colorCalculatorBox"
        android:text="/"
        android:textColor="@color/white"/>

    <Button
       android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_row="3"
        android:layout_column="0"

        android:layout_gravity="fill_horizontal|top"
        android:layout_marginTop="3dp"

        android:layout_marginRight="3dp"
        android:textSize="45dp"
        android:fontFamily="@font/abeezee"
        android:background="@color/colorCalculatorBox2"
        android:text="4"
        android:textColor="@color/white"/>
    <Button
       android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_marginRight="3dp"

        android:layout_gravity="fill_horizontal|top"
        android:layout_marginTop="3dp"
        android:textSize="45dp"
        android:fontFamily="@font/abeezee"
        android:background="@color/colorCalculatorBox2"
        android:text="5"
        android:textColor="@color/white"/>
    <Button
       android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_row="3"
        android:layout_column="2"

        android:layout_marginRight="3dp"
        android:layout_gravity="fill_horizontal|top"
        android:layout_marginTop="3dp"
        android:textSize="45dp"
        android:fontFamily="@font/abeezee"
        android:background="@color/colorCalculatorBox2"
        android:text="6"
        android:textColor="@color/white"/>
    <Button
       android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_row="3"
        android:layout_column="3"
        android:layout_gravity="fill_horizontal|top"
        android:layout_marginTop="3dp"
        android:layout_marginRight="1dp"
        android:textSize="38dp"
        android:fontFamily="@font/abeezee"
        android:background="@color/colorCalculatorBox"
        android:text="x"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_row="4"
        android:layout_column="0"

        android:layout_gravity="fill_horizontal|top"
        android:layout_marginTop="3dp"
        android:layout_marginRight="3dp"
        android:textSize="45dp"
        android:fontFamily="@font/abeezee"
        android:background="@color/colorCalculatorBox2"
        android:text="1"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_marginRight="3dp"

        android:layout_gravity="fill_horizontal|top"
        android:layout_marginTop="3dp"
        android:textSize="45dp"
        android:fontFamily="@font/abeezee"
        android:background="@color/colorCalculatorBox2"
        android:text="2"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_row="4"
        android:layout_column="2"

        android:layout_marginRight="3dp"
        android:layout_gravity="fill_horizontal|top"
        android:layout_marginTop="3dp"
        android:textSize="45dp"
        android:fontFamily="@font/abeezee"
        android:background="@color/colorCalculatorBox2"
        android:text="3"
        android:textColor="@color/white"/>
    <Button
       android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_row="4"
        android:layout_column="3"

        android:layout_gravity="fill_horizontal|top"
        android:layout_marginTop="3dp"
        android:textSize="38dp"
        android:fontFamily="@font/abeezee"
        android:background="@color/colorCalculatorBox"
        android:text="-"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_row="5"
        android:layout_column="0"

        android:layout_gravity="fill_horizontal|top"
        android:layout_marginTop="3dp"
        android:layout_marginRight="3dp"
        android:textSize="45dp"
        android:fontFamily="@font/abeezee"
        android:background="@color/colorCalculatorBox2"
        android:text="."
        android:textColor="@color/white"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_marginRight="3dp"

        android:layout_gravity="fill_horizontal|top"
        android:layout_marginTop="3dp"
        android:textSize="45dp"
        android:fontFamily="@font/abeezee"
        android:background="@color/colorCalculatorBox2"
        android:text="0"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_row="5"
        android:layout_column="2"

        android:layout_marginRight="3dp"
        android:layout_gravity="fill_horizontal|top"
        android:layout_marginTop="3dp"
        android:textSize="45dp"
        android:fontFamily="@font/abeezee"
        android:background="@color/colorCalculatorBox2"
        android:text="="
        android:textColor="@color/white"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_row="5"
        android:layout_column="3"
        android:layout_gravity="fill_horizontal|top"
        android:layout_marginTop="3dp"
        android:textSize="38dp"
        android:fontFamily="@font/abeezee"
        android:background="@color/colorCalculatorBox"
        android:text="+"
        android:textColor="@color/white"/>



</GridLayout>