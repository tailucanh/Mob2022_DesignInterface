<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="text_tab_layout" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/courgette</item>
        <item name="android:textSize">17dp</item>
    </style>
    <style name="text_input_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/background_tint_input</item>
        <item name="android:fontFamily">@font/courgette</item>
        <item name="android:inputType">text</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="style_button_text_input">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@drawable/custom_buton_dialog</item>
        <item name="android:fontFamily">@font/permanen</item>
        <item name="android:elevation">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
    </style>
</resources>